#!/usr/bin/env bash

# Handle --dry option
args=()
for arg in "$@"; do
  if [[ "$arg" == "--dry" ]]; then
    args+=("--dry-activate")
  else
    args+=("$arg")
  fi
done

exec deploy .#vali .#mimir .#hades-1 .#hades-2 .#hades-3 .#hades-4 .#hades-5 .#hades-6 .#orion .#idunn .#datadog --skip-checks "${args[@]}"
