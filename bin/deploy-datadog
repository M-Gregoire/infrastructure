#!/usr/bin/env bash

# Check if deploying to current machine (local deployment)
current_hostname=$(hostname)
is_local=false

# Map deploy targets to expected hostnames
case "$current_hostname" in
  *datadog* | *COMP-CQ5H77T0CQ*)
    if [[ "$(uname -s)" == "Darwin" ]]; then
      is_local=true
    fi
    ;;
esac

if [[ "$is_local" == "true" ]]; then
  # Handle --dry option for local deployment
  dry_run=false
  extra_args=()
  for arg in "$@"; do
    if [[ "$arg" == "--dry" ]]; then
      dry_run=true
    else
      extra_args+=("$arg")
    fi
  done

  if [[ "$dry_run" == "true" ]]; then
    echo "üè† Local deployment (dry run): darwin-rebuild build --flake .#datadog"
    exec sudo darwin-rebuild build --flake .#datadog "${extra_args[@]}"
  else
    echo "üè† Local deployment: darwin-rebuild switch --flake .#datadog"
    exec sudo darwin-rebuild switch --flake .#datadog "${extra_args[@]}"
  fi
else
  # Remote deployment via deploy-rs
  args=()
  for arg in "$@"; do
    if [[ "$arg" == "--dry" ]]; then
      args+=("--dry-activate")
    else
      args+=("$arg")
    fi
  done
  exec deploy .#datadog --skip-checks "${args[@]}"
fi
